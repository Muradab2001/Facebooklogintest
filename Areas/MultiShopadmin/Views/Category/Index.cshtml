@model List<Category>
@{ ViewData["Title"] = "Index"; }


<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="MultiShopadmin" asp-controller="Category" asp-action="Create">Create new category</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                       Photo
                    </th>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {
                <tr>
                    <td>
                        <img style=" width: 21%; height: 64px; " src="~/assets/img/@category.Image" alt="@category.Name" />
                    </td>
                    <td>
                        @category.Id
                    </td>
                    <td>
                        @category.Name
                    </td>
                    <td style=" height: 197px; padding: 4rem 0;" class="d-flex">
                        <div>
                            <a asp-area="MultiShopadmin" asp-controller="Category" asp-action="edit" asp-route-id="@category.Id" class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                        </div>
                        <div>
                            <a class="btn btn-danger" asp-area="MultiShopadmin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"><i class="mdi mdi-delete"></i></a>
                        </div>
                    </td>
                </tr>}
            </tbody>
        </table>
    </div>
</div>


